# Create new environment named py35 install Python3.5
conda create --name py35 python=3.5

# Create new environment from the environment.yml file
conda env create -f environment.yml

# To install from requirements file
conda install --file requirements.txt

# Get a list of all my environments
conda info --envs
conda info -e

# Activate the new environment to use it
conda activate snowflakes

# Deactivate the environment
conda deactivate

# Delete an environment
conda remove -n flowers --all

# View list of packages and versions installed in active environment
conda list

# Update existing environment from local yml file
conda env update --file local.yml --prune



